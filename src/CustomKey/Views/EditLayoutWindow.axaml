<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="CustomKey.Views.EditLayoutWindow"
        mc:Ignorable="d" d:DesignWidth="525" d:DesignHeight="250"
        Height="250" Width="525" CanResize="False"
        WindowStartupLocation="CenterScreen" Topmost="True"
        Title="Manage Layout">
    
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="KeyPressedTextBlock"
                       Text="Click on this window and Press a key..."
                       FontSize="24" 
                       HorizontalAlignment="Center"/>
            <Button Content="Copy Key ID" 
                    HorizontalAlignment="Center" 
                    Margin="10" 
                    Click="CopyKeyId"/>
        </StackPanel>
</Window>